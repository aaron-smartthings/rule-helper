{
    "name": "If switch level value drops below 25, turn off other devices",
    "actions": [
        {
            "if": {
                "dropsBelow": {
                    "left": {
                        "device": {
                            "devices": [
                                "Dimmer device ID"
                            ],
                            "component": "main",
                            "capability": "switchLevel",
                            "attribute": "level"
                        }
                    },
                    "right": {
                        "integer": 25
                    }
                },
                "then": [
                    {
                        "command": {
                            "devices": [
                                "Device 1 ID","Device 2 ID","Device 3 ID"
                            ],
                            "commands": [
                                {
                                    "component": "main",
                                    "capability": "switch",
                                    "command": "off"
                                }
                            ]
                        }
                    }
                ],
                "else": []
            }
        }
    ]
}