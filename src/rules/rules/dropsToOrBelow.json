{
    "name": "If switch level Drops Below or equals 25, change location mode",
    "actions": [
        {
            "if": {
                "dropsToOrBelow": {
                    "left": {
                        "device": {
                            "devices": [
                                "Dimmer switch ID"
                            ],
                            "component": "main",
                            "capability": "switchLevel",
                            "attribute": "level"
                        }
                    },
                    "right": {
                        "integer": 25
                    }
                },
                "then": [
                    {
                        "location": {
                            "mode": "location mode ID"
                        }
                    }
                ],
                "else": []
            }
        }
    ]
}