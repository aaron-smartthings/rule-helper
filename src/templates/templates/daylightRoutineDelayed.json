{
    "name": "Daylight Routine with delayed action",
    "actions": [
        {
            "if": {
                "between": {
                    "value": {
                        "time": {
                            "reference": "Now"
                        }
                    },
                    "start": {
                        "time": {
                            "reference": "Sunrise"
                        }
                    },
                    "end": {
                        "reference": "Sunset"
                    }
                },
                "then": [
                    {
                        "if": {
                            "equals": {
                                "left": {
                                    "device": {
                                        "devices": [
                                            "{{ deviceId }}"
                                        ],
                                        "component": "{{ componentId }}",
                                        "attribute": "{{ attributeName }}"
                                    }
                                },
                                "right": {
                                    "{{ string | integer}}": "{{ value }}"
                                }
                            },
                            "then": [
                                {
                                    "sleep": {
                                        "duration": {
                                            "value": "{{ number }}",
                                            "unit": "{{ timeUnit }}"
                                        }
                                    }
                                },
                                {
                                    "command": {
                                        "devices": [
                                            "{{ deviceId }}"
                                        ],
                                        "commands": []
                                    }
                                }
                            ],
                            "else": []
                        }
                    }
                ]
            }
        }
    ]
}